<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mentorship"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:src="@drawable/icon"
            android:id="@+id/back5"/>

    </RelativeLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/baloo"
                    android:text="Communities Near You"
                    android:textColor="#102638"
                    android:textSize="28sp" />

                <RelativeLayout
                    android:background="@color/white"
                    android:elevation="8dp"
                    android:layout_below="@id/app_name"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:text="Delhi" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="20dp"
                        android:src="@drawable/search_icon" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#20B2AA"
                        android:padding="10dp">

                        <TextView
                            android:id="@id/t1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Women Who Code Delhi"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6495ED"
                        android:padding="10dp">
                        <TextView
                            android:id="@id/t2"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:text="Delhi Women In Machine Learning"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/t2"
                            android:layout_marginLeft="10dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>





                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4A460"
                        android:padding="10dp">
                        <TextView
                            android:id="@id/t1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:text="Developer Students Club NCR"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/t1"
                            android:layout_marginStart="10dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#DDA0DD"
                        android:padding="10dp">
                        <TextView
                            android:id="@id/t1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:text="Facebook Developer Circle Delhi"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/t1"
                            android:layout_marginStart="10dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#DC143C"
                        android:padding="10dp">

                        <TextView
                            android:id="@id/t1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Data Science Group"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90EE90"
                        android:padding="10dp">

                        <TextView
                            android:id="@id/t1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="SheCodes Delhi"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D2691E"
                        android:padding="10dp">

                        <TextView
                            android:id="@id/t1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Women in Tech Club"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Join Now"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/club"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>